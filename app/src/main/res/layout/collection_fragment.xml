<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".CollectionFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="80dp"
        android:src="@drawable/logo"

        />

    <TextView
        android:id="@+id/txtLoginEmail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/layout_sign_email"
        android:drawableStart="@drawable/icon_email"
        android:drawablePadding="50dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:text="LOGIN WITH EMAIL"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtLoginPhoneNum"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/layout_sign_email"
        android:drawableStart="@drawable/icon_call"
        android:drawablePadding="50dp"
        android:paddingVertical="10dp"
        android:paddingLeft="20dp"
        android:text="LOGIN WITH PHONE NUMBER"
        android:textStyle="bold" />
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:text="or"
        android:textSize="18dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/txtRegisterNew"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:drawablePadding="50dp"
        android:paddingVertical="10dp"
        android:paddingLeft="20dp"
        android:text="Register new account?"
        android:textStyle="bold" />

</LinearLayout>